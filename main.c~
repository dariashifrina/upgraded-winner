#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "controller.c"

void bufferz( char * buff ){
  char * buffer = (char *)calloc(1024,sizeof(char));
  fgets(buffer, 1024, stdin);
  // printf("buffer is: %s\n", buff);
  int i = 0;
  while(buffer[i] != '\0'){
    //if(strcmp(buffer[i], "/n") == 0){
    if(buffer[i]== '\n'){
      buffer[i] = 0;
    }
    else{
      i++;
    }
  }
strncpy(buff, buffer, 1024);
free(buffer);
}

void run(){
  char buffer[1024];
  char *p = buffer;
  bufferz(buffer);
  printf("%s\n", p);
}

int main(){
  run();
  return 0;
}
